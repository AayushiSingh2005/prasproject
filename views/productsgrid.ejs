    <link href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200..1000;1,200..1000&display=swap" rel="stylesheet">
        <!--Bootstrap CSS-->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    
      </head>
      <body>
    
       <header>  <!--navbar-->
    
          
        <nav class="navbar fixed-top navbar-light navbar-expand-md">
          <div class="container-fluid">
            <a class="navbar-brand" href="/">
              <!--enter logo here-->
              <img src="/logo.jpg" alt="" width="30" height="30" class="d-inline-block align-text-top">
              <div class="display-12 text-success fw-bold d-inline-block ">Hygieia  </div> 
            </a>
    
        
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#toggleMobileMenu" aria-controls="toggleMobileMenu" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="toggleMobileMenu">
              <ul class="navbar-nav text-center row justify-container-between" >
                <li class="nav-item co-md-5">
                  <a class="nav-link active text-success d-flex nav_opt" aria-current="page" href="/">
                    <i class="bi bi-house-door-fill "></i> Home</a></li>
                </li>
                <li class="nav-item">
                  <a class="nav-link active text-success d-flex nav_opt" aria-current="page" href="/doctorsapp">
                    <i class="bi bi-hospital-fill"></i>Doctors</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link active text-success d-flex nav_opt" aria-current="page" href="/labtests">
                    <i class="bi bi-prescription2"></i>Labtests</a>
                  </li>
                <li class="nav-item">
                  <a class="nav-link active text-success d-flex nav_opt" aria-current="page" href="/medicines">
                    <i class="bi bi-capsule-pill"></i>Medicines</a>
                  </li>
                <li class="nav-item dropdown display-12 text-success d-flex">
                  <a class="nav-link dropdown-toggle text-success nav_opt" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                   More
                  </a>
                  <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item " href="#">Help</a></li>
                    <li><a class="dropdown-item" href="#"></a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="#">Something else here</a></li>
                  </ul>
                </li>
              </ul>
              <form class="d-none d-md-flex ms-auto">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success" type="submit">Search</button>
              </form>
              <a class="nav-item">
                <a class="nav-link display-6 active text-success d-flex" aria-current="page" href="#sidebar" role="button" data-bs-toggle="offcanvas" aria-controls="sidebar">
                  <i class="bi bi-person-circle"></i></a>
                </a>
            </li>
            </div>
    
            <!--off canvas-->
     
    
            <div class="offcanvas offcanvas-end" tabindex="-1" id="sidebar" aria-labelledby="sidebar-label">
              <div class="offcanvas-header">
                <div class="offcanvas-title" id="sidebar-label" style="color:white; font-weight: bold; font-family: 'Nunito';">Username</div>
                <button type="button " class="btn-close" data-bs-dismiss="offcanvas" aria-label="close"></button>
              </div>
              <div class="offcanvas-body">
                <a href="/login" class="d-block" style="text-decoration: none;"><div class="offcanvasoptions"><i class="bi bi-person "></i>Switch Account</div></a>
                <a href="/login" class="d-block" style="text-decoration: none;"><div class="offcanvasoptions"><i class="bi bi-box-arrow-right "></i>Log Out</div></a>
              </div>
            </div>
            
          
        </nav>
      
        </header>
          <main>
            <div class="container text-center prod">
              <div class="row">
                <%if(med.length==0){%>
                  <p>Searched product is not available.</p>
                  <%}else{%>
                  <%for(medi of med){%>
                <div class="col">
                  <img src="<%=medi.image%>">
                  <p><%=medi.name%></p>
                  <p><%=medi.price%></p>
                  <a href='/placeprodorder'><button class="cardbutton">Add to Cart</button></a>
                </div>
                <%}}%>
            </div>

            
          </main>


          <footer class="bottomcard">

            <div ><button class="cardbutton">View Cart</button></div>
          </footer>

        <script src="https://code.jquery.com/jquery-1.12.1.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js">
        </script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
